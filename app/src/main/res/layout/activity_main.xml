<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        tools:context=".view.MainActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:focusableInTouchMode="true"
                  android:orientation="vertical"
                  android:padding="20dp"
                  android:gravity="center"
                  tools:layout_editor_absoluteY="0dp"
                  tools:layout_editor_absoluteX="0dp">

        <ImageView android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:background="@drawable/background1"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Absen TKJ"
                  android:textAlignment="center"
                  android:textStyle="bold"
                  android:textSize="25dp"
                  android:textColor="#fff"
        />
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
        >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anda Sudah Absen Masuk"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:id="@+id/centang1"
                    android:visibility="gone"
            />
            <TextView
                    android:id="@+id/centang2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anda Sudah Absen Pulang"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:visibility="gone"
            />
        </LinearLayout>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scanned Value: "
            android:textColor="#fff"
            android:id="@+id/txtValueLabel"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{{please scan first}}"
            android:textColor="#fff"
            android:id="@+id/txtValue"

    />
        <ImageView
                android:id="@+id/btnScan"
                android:padding="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_11"
        />

        <ImageView
                android:id="@+id/pulang"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="10dp"
                android:padding="30dp"
                android:background="@drawable/ic_12"
                android:visibility="gone"
        />


    </LinearLayout>
</LinearLayout>